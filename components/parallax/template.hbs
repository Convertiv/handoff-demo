<head>
  <link rel="stylesheet" href="/api/component/main.css" />
  {{{style}}}
  {{{script}}}
</head>

<body class="theme preview-body">
  <div class="block parallax parallax--{{properties.height}}" id="parallax">
    <div class="parallax__background" style="background-image: url('{{properties.image.src}}');">
      {{#if properties.overlay}}
      <div class="parallax__overlay" style="opacity: {{properties.overlay_opacity}}%;"></div>
      {{/if}}
    </div>
    <div class="parallax__content">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-10 col-xl-8 text-center">
            <h2 class="parallax__title display-2">{{#field "title"}}{{properties.title}}{{/field}}</h2>
            {{#if properties.subtitle}}
            <p class="parallax__subtitle lead">{{#field "subtitle"}}{{properties.subtitle}}{{/field}}</p>
            {{/if}}
            {{#if properties.button}}
            <div class="parallax__actions mt-4">
              <a role="button" class="btn btn-light btn-lg" href="{{properties.button.url}}">
                {{#field "button.label"}}{{properties.button.label}}{{/field}}
              </a>
            </div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</body>



